<h2>User#Index だお</h2>
<ul class="list-group">
  <% @users.each do |user| %>
    <li class="list-group-item">
      <%= link_to user.full_name, user_path(user) %>
      <%= user.job %>
      <%= user.age %>
    </li>
  <% end %>
</ul>
<% if user_signed_in? %>
  <%= link_to 'マイページ', user_path(current_user), class: 'btn btn-secondary', role: 'button' %>
<% else %>
  <%= link_to 'GEEKTOWNに登録する', new_user_registration_path, class: 'btn btn-primary', role: "button" %>
<% end %>
<%= link_to 'エンジニアに質問する', new_contact_path, class: 'btn btn-primary', role: "button" %>